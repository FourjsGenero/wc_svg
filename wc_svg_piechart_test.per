ATTRIBUTES
WEBCOMPONENT w01 = formonly.pie_chart, COMPONENTTYPE="wc_svg";
c01 = formonly.KEY, TITLE="Key";
c02 = formonly.qty1, JUSTIFY=RIGHT, TITLE="Qty1";
c03 = formonly.qty2, JUSTIFY=RIGHT, TITLE="Qty2";
c04 = formonly.colour, TITLE="Colour";

GROUP g_chart: TEXT="Chart";
SPINEDIT f01 = formonly.x;
SPINEDIT f02 = formonly.y;
SPINEDIT f03 = formonly.rx;
SPINEDIT f04 = formonly.ry;

COMBOBOX f05 = formonly.key_column; 
COMBOBOX f06 = formonly.value_column; 
COMBOBOX f07 = formonly.colour_column; 

GROUP g_title: TEXT="Title";
EDIT f11 = formonly.title_text, SCROLL;
SPINEDIT f12 = formonly.title_x;
SPINEDIT f13 = formonly.title_y;
COMBOBOX f14 = formonly.title_justify, ITEMS=("start","middle","end");
BUTTONEDIT f15 = formonly.title_font, NOTEDITABLE, SCROLL, ACTION=font;
BUTTONEDIT f16 = formonly.title_stroke, NOTEDITABLE, SCROLL, ACTION=stroke;
BUTTONEDIT f17 = formonly.title_fill, NOTEDITABLE, SCROLL, ACTION=fill;

GROUP g_legend_title: TEXT="Legend Title";
EDIT f21 = formonly.legend_title_text, SCROLL;
SPINEDIT f22 = formonly.legend_title_x;
SPINEDIT f23 = formonly.legend_title_y;
COMBOBOX f24 = formonly.legend_title_justify, ITEMS=("start","middle","end");
BUTTONEDIT f25 = formonly.legend_title_font, NOTEDITABLE, SCROLL, ACTION=font;
BUTTONEDIT f26 = formonly.legend_title_stroke, NOTEDITABLE, SCROLL, ACTION=stroke;
BUTTONEDIT f27 = formonly.legend_title_fill, NOTEDITABLE, SCROLL, ACTION=fill;

GROUP g_legend: TEXT="Legend";
SPINEDIT f31 = formonly.legend_x;
SPINEDIT f32 = formonly.legend_y;
SPINEDIT f33 = formonly.legend_width;
SPINEDIT f34 = formonly.legend_height;
EDIT f35 = formonly.legend_format;
EDIT f36 = formonly.legend_value_format;
EDIT f37 = formonly.legend_perc_format;
BUTTONEDIT f38 = formonly.legend_font, NOTEDITABLE, SCROLL, ACTION=font;
BUTTONEDIT f39 = formonly.legend_stroke, NOTEDITABLE, SCROLL, ACTION=stroke;
BUTTONEDIT f40 = formonly.legend_fill, NOTEDITABLE, SCROLL, ACTION=fill;


INSTRUCTIONS
SCREEN RECORD scr(key, qty1, qty2, colour);
